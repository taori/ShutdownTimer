@page
@model ShutdownTimer.Server.Areas.Admin.Pages.Commands.AddModel
@{
	ViewData["Title"] = "New command";
	Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
	<div class="col-md-4">
		<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Input.CommandName"></label>
				<input asp-for="Input.CommandName" class="form-control" />
				<span asp-validation-for="Input.CommandName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.PermissionName"></label>
				<input asp-for="Input.PermissionName" class="form-control" />
				<span asp-validation-for="Input.PermissionName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.ProgramName"></label>
				<input asp-for="Input.ProgramName" class="form-control" />
				<span asp-validation-for="Input.ProgramName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Argument"></label>
				<input asp-for="Input.Argument" class="form-control" />
				<span asp-validation-for="Input.Argument" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary">Add command</button>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
